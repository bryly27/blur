<% content_for :title do %>
	Edit Profile
<% end %>

<% content_for :body do %>

	<div class="container">
		<div class='header'>
	    <div class="navbar-header">
	      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/"><span class='logo'>Awkyo</span></a>
	    </div>
	    <center>
	      <div class="navbar-collapse collapse" id="navbar-main">
	      </div>
	    </center>
		</div>
	</div>
	
	<div class='container'>
		<div class='row margin_top_50'>
			<div class='col-md-4 col-md-offset-1'>
				<% if flash[:success] %>
					<%= flash[:success] %>
				<% end %>
				<p></p>
				<h1>Edit Profile</h1>
				<form class='margin_top_50' action='/profile/<%= @user.profile.id %>/update' method='post' enctype='multipart/form-data'> 
					<div class='home_photo'>
						<%= image_tag @user.profile.avatar.url %>
					</div> 
					<input type='file' name='avatar' class='margin_top_20'>
					<div class='form-group margin_top_20'>
						<p><label>City: </label><input type='text' name='city' value='<%= @user.profile.city %>'></p>
						<p><label>State: </label>
		  			<select  id="sel1" name='state'>
					  	<option value='<%= @user.profile.city %>'><%= @user.profile.city %></option>
					  	<% @states.each do |x| %>
					  		<option value='<%= x %>'><%= x %></option>
					  	<% end %>
				  	</select></p>
				  </div>
				  <div class="form-group">
				    <label for="comment">Description: </label>
				    <textarea class="form-control" name='description' rows="5" id="comment"><%= @user.profile.description %></textarea>
				  </div>
				  <input type="submit" value="Submit" class="btn btn-info btn-block">
				  <input name="authenticity_token" value="<%=form_authenticity_token %>" type="hidden">
				</form>





			</div>
			<div class='col-md-3'>
			</div>
			<div class='col-md-3'>
				<h3><a href="/home">Home</a></h3>
			</div>
		</div>
	</div>

	<div class='container wrapper'>
		<footer>
			<div class='container'>
				<ul class='footer'>
					<li><a href='/about'>About</a></li>
						<li><a href='/how'>How It Works</a></li>
						<li><a href='/careers'>Careers</a></li>
						<li><a href='/faq'>FAQ</a></li>
						<li><a href='/terms'>Terms</a></li>
				</ul>
			</div>
		</footer>
	</div>


<% end %>